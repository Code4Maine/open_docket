<% provide(:title, 'New') %>
<h1>New Committee</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@committee) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :shortname %>
      <%= f.text_field :shortname %>

      <%= f.label :description %>
      <%= f.text_area :description, :size => "60x12" %>

      <%= f.submit "Create committee", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
